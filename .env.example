# PUO Memo MCP Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=postgres
DB_USER=your-database-user
DB_PASSWORD=your-secure-database-password

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLOUD_PROJECT=your-gcp-project

# Storage Configuration
GCS_BUCKET_NAME=your-gcs-bucket-name

# Redis Configuration
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false

# Authentication Configuration
JWT_SECRET_KEY=your-very-long-random-secret-key-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=your-secure-api-key-for-mcp-server

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
RATE_LIMIT_PER_MINUTE=100

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true

# Context Configuration
DEFAULT_CONTEXT=unified
DEDUP_TIME_WINDOW_SECONDS=300
DEDUP_SIMILARITY_THRESHOLD=0.9

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
ENABLE_NLP_SEARCH=true

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
ENVIRONMENT=development
APP_VERSION=1.0.0